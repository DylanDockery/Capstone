@model Capstone3.Models.Products
@{
    ViewData["Title"] = "Steam";

}


<head>
    <meta charset="utf-8">
    <meta name="viewport"
          content="width=device-width,
                 initial-scale=1, shrink-to-fit=no">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css"
          rel="stylesheet">
</head>
<body>
    <div class="text-center">
        <h1 class="display-4">Amazon Web Services</h1>
    </div>
    <h3>@(Model.service) - @(Model.Regions[Model.region])</h3>
    <table id="mytableID" style="width:100%"
           class="table table-striped sampleTable">
        <thead>
            <tr>
                <th>Description</th>
                <th>Price (USD)</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model.product)
            {
                {
                    <tr>
                        <td>
                            @item.Description
                        </td>
                       
                        <td>
                            @(item.Price)
                        </td>
                    </tr>
                }

            }
        </tbody>
    </table>
</body>

